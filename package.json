{
  "name": "licensed-ci",
  "version": "1.4.0",
  "description": "GitHub Actions CI workflow for github/licensed",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint lib test",
    "test": "npm run lint && jest",
    "package": "ncc build lib/index.js -o dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonabc/licensed-ci.git"
  },
  "keywords": [
    "GitHub",
    "Licensed"
  ],
  "author": "Jon Ruskin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jonabc/licensed-ci/issues"
  },
  "homepage": "https://github.com/jonabc/licensed-ci#readme",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0",
    "@actions/io": "^1.1.1"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.31",
    "acorn": "^8.5",
    "eslint": "^8.0.1",
    "husky": "^7.0.2",
    "jest": "^27.3",
    "nock": "^13.1.4",
    "sinon": "^11.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run package && git add dist"
    }
  }
}
